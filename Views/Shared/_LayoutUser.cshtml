<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sample</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <header>
            <nav class="main-header navbar navbar-expand-md navbar-dark navbar-background">
                <div class="container">
                <a href="#" class="navbar-brand">
                    <img src="~/img/engineering icon.png" alt="AdminLTE Logo" class="brand-image img-circle">
                </a>
                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon ml-2"></span>
                </button>
                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a  class="nav-link text-white" asp-controller="Home" asp-action="History">หน้าแรก</a>
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Addform">กรอกคำขออนุมัติเดินทางไปปฏิบัติงาน</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Manageuser">จัดการรายชื่อผู้ใช้</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Manageform">จัดการแบบฟอร์ม</a>
                        </li>
                    </ul>
                </div>
                <!-- Right navbar links -->
                <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                    <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <!-- <i class="fas fa-chevron-circle-down"></i> -->
                        <span class="mr-2 text-md">Douglas McGee</span>
                        <img class="mr-2 brand-image img-circle" src="~/img/user.png" style="opacity: .8">
                    </a>
                    <!-- <a href="#" class="nav-link text-white" data-toggle="dropdown">ออกจากระบบ&nbsp<i class="fas fa-sign-out-alt"></i></a> -->
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Profile">
                        <i class="far fa-user"></i> แก้ไขโปรไฟล์
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-sign-out-alt"></i> ออกจากระบบ
                        </a>
                    </div>
                </li>
            </ul>
        </div>
     </nav>
     </header>
    <div class="content-wrapper" style="background-color: white;">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer>
        <footer class="main-footer">
            <div class="container my-auto">
            <p><strong>Copyright 2021</strong> FACULTY OF ENGINEERING AT SRIRACHA, KASETSART UNIVERSITY SRIRACHA CAMPUS.</p>
        </div>
    </footer>
  </footer>
</div>
    <style>
        .navbar-background
        {
            background-color: #440000;
            background-image: linear-gradient(
            180deg
            , #8E0E00 10%, #440000 100%);
            background-size: cover;
        }
       
    </style>
    <!-- jQuery -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
