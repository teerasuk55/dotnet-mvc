@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["Title"] = "Profile";   
}

    &nbsp&nbsp
    <div class="card ">
            <div class="card-header">
                <h3 class="card-title">โปรไฟล์</h3>
            </div>
            <form>
                <div class="card-body">
                    <div class="form-group">
                        <label for="Name">ชื่อ</label>
                        <input type="text" class="form-control" id="Name" placeholder="ชื่อ" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Surname">นามสกุล</label>
                        <input type="text" class="form-control" id="Surname" placeholder="นามสกุล" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Department">สาขาวิชา</label>
                        <input type="text" class="form-control" id="Department" placeholder="สาขาวิชา" disabled>
                    </div>
                    <div class="form-group">
                        <label for="email">อีเมล</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="อีเมล" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Rank">ตำแหน่งทางวิชาการ</label>
                        <select class="form-control select2bs4" name="Rank" id="Rank" style="width: 100%;">
                            <option selected>เลือกตำแหน่ง...</option>
                            <option value="1">หนึ่ง</option>
                            <option value="2">สอง</option>
                            <option value="3">สาม</option>
                            <option value="4">สี่</option>
                            <option value="5">ห้า</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Position">ตำแหน่ง</label>
                        <select class="form-control select2bs4" name="Position" id="Position" style="width: 100%;">
                            <option selected>เลือกตำแหน่ง...</option>
                            <option value="1">หนึ่ง</option>
                            <option value="2">สอง</option>
                            <option value="3">สาม</option>
                            <option value="4">สี่</option>
                            <option value="5">ห้า</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">เพิ่มลายเซ็น</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="exampleInputFile">
                                <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="card-footer">
                <button type="submit" class="btn btn-success" href="#">บันทึก</button>
                <a class="btn btn-danger" asp-controller="Home" asp-action="History">ยกเลิก</a>
            </div>
        </div>

